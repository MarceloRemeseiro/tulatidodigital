---
import content from '../content/about.json';
---

<section id="nosotros" class="py-20 md:py-32 bg-background-alt section-fade-in">
  <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
    <h2 class="text-4xl font-bold text-primary">
      {content.title}
    </h2>
    <p class="mt-6 text-xl text-foreground/90">
      {content.paragraph}
    </p>
    <div class="mt-12">
      <h3 class="text-3xl font-bold text-secondary">
        {content.focus.title}
      </h3>
      <p class="mt-6 text-lg text-foreground/80">
        {content.focus.paragraph}
      </p>
    </div>
    <div class="mt-12 text-left">
      <h3 class="text-3xl font-bold text-primary">
        {content.reasons.title}
      </h3>
      <ul class="mt-6 space-y-4 text-lg text-foreground/80">
        {content.reasons.items.map(item => (
          <li class="flex items-start">
            <span class="text-secondary text-2xl mr-3">{item.icon}</span>
            <span>{item.text}</span>
          </li>
        ))}
      </ul>
    </div>
    <a href="#contacto" class="mt-12 inline-block bg-gradient-to-r from-primary to-secondary text-primary-foreground font-bold py-3 px-8 rounded-lg hover:opacity-90 transition-opacity shadow-lg">
      {content.cta}
    </a>
  </div>
</section> 